<div class="page-header">
  <h1>Anomaly Reports</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-4">Date</th>
      <th class="col-md-4">Source</th>
      <th class="col-md-4">Count</th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td class="col-md-4"><%= report.date %></td>
        <td class="col-md-4"><%= report.source %></td>
        <td class="col-md-4"><%= report.entry_count || 0 %></td>
      </tr>
    <% end %>
  </tbody>
</table>

